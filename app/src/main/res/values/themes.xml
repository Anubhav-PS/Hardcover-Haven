<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HardcoverHaven" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_100</item>
        <item name="colorPrimaryVariant">#45ABE4</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey_100</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">#E6B3B3B3</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="ForArrow">
        <item name="colorControlHighlight">@color/black_100</item>
    </style>

    <style name="ForArrowTheme">
        <item name="android:theme">@style/ForArrow</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="cancelBtn">
        <item name="colorControlHighlight">#E6FF7C7C</item>
    </style>

    <style name="cancelTheme">
        <item name="android:theme">@style/cancelBtn</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_bottom_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_down_bottom_dialog</item>
    </style>

    <style name="ThemeOverlay.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- Text color -->
        <item name="android:editTextColor">@color/black_200</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">@color/text_grey_1</item>

        <item name="android:iconTint">@color/black_200</item>

        <item name="android:textCursorDrawable">@color/black_200</item>

        <item name="android:textColorSecondary">@color/blue_100</item>
    </style>

</resources>