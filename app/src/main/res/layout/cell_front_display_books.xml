<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cellFrontDisplayLinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cellFrontDisplayBookCard"
        android:layout_width="122dp"
        android:layout_height="170dp"
        android:layout_margin="2dp"
        android:clickable="true"
        android:clipToPadding="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        android:elevation="4dp"
        app:rippleColor="#1B303030">


        <ImageView
            android:id="@+id/cellFrontDisplayBookImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitXY"
            android:src="@drawable/bookcover" />


    </androidx.cardview.widget.CardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cellFrontDisplayBookTitleTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:scrollHorizontally="false"
        android:text="The Last Lecture fjgojtotn"
        android:textAlignment="textStart"
        android:ellipsize="end"
        android:textColor="#E6797979"
        android:textIsSelectable="false"
        android:textSize="13sp"
        app:fontFamily="@font/roboto_medium">

    </com.google.android.material.textview.MaterialTextView>


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/cellFrontDisplayAuthorTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif-medium"
        android:inputType="textMultiLine"
        android:maxLines="2"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:scrollHorizontally="false"
        android:text="The Last Lecture"
        android:ellipsize="end"
        android:textAlignment="textStart"
        android:textColor="#E6646464"
        android:textIsSelectable="false"
        android:textSize="11sp"
        app:fontFamily="@font/roboto">

    </com.google.android.material.textview.MaterialTextView>


</LinearLayout>